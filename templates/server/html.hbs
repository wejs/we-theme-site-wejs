<!DOCTYPE html>
<html lang="{{locale}}">
<head>
  <title>{{title}} {{req.we.config.appName}}</title>

  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

  {{#unless metadata.image}}
    <meta property="og:image" content="{{req.we.config.hostname}}/public/plugin/we-core/files/images/logo.png">
  {{/unless}}
  {{#unless metadata.description}}
     <meta name="description" content="Server side javascript framework for build real time applications, sites or blogs!">
     <meta property="og:description" content="Server side javascript framework for build real time applications, sites or blogs!">
  {{/unless}}
  {{#if _csrf}}<meta name="csrf-token" content="{{_csrf}}" />{{/if}}

  {{{render-metadata-tags}}}
  {{{render-stylesheet-tags}}}
  {{{render-javascript-tags 'header'}}}
</head>
<body>
  {{we-event event="we-html-body-start"}}
  {{{template 'partials/header'}}}
  {{{layoutHtml}}}
  {{{template 'partials/footer'}}}
  {{we-event event="we-html-body-end"}}
</body>
</html>