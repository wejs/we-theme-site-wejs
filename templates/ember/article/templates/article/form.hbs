<article>
  <h1>{{focus-input value=record.title placeholder="Write the title here" classNames="form-control input-lg header-inputs"}}</h1>
  <h2 class="subheading">
    <label for="about">{{t 'article.form.about.label'}}</label>
    {{we-editor value=record.about style="small" classNames="header-inputs"}}
  </h2>
  <div class="record-featuredImage">
    {{#unless inputReset}}
      {{image-upload classNames="form-control header-inputs" files=selectedImage}}
    {{/unless}}
    {{#if selectedImage}}
      <button {{action 'resetSelectedImage'}} class="btn btn-default">{{t 'reset'}}</button>
    {{/if}}
  </div>

	<form>
	  <div class="form-group">
	    <div class="post-edit-body">
	      <label for="body">{{t 'article.form.body.label'}}</label>
	      {{we-editor value=record.body}}
	    </div>
	  </div>

	  <hr>

	  <div class="form-group">
	    <div class="post-edit-category">
	      <label for="category">{{t 'article.form.category.label'}}</label>
	      {{we-category-field value=record.category newTagMark=' (nova)' maximumSelectionSize='4'}}
	    </div>
	  </div>

	  <div class="form-group">
	    <label for="tag">{{t 'article.form.tag.label'}}</label>
	    {{we-tag-field value=record.tag newTagMark=' (nova)' maximumSelectionSize='5'}}
	  </div>

	  <hr>

	  <div class="checkbox">
	    <label>
	      {{input name="published" type="checkbox" checked=record.published}}
	      {{t 'article.form.published.label'}}
	    </label>
	  </div>

	  <hr>

	  {{#if record.id}}
	    <div class="form-group">
	      <button {{action 'saveRecord'}} class="btn btn-success">Save</button>
	      <button {{action 'saveAndPublishRecord'}} class="btn btn-primary">Save and publish</button>
	      <button {{action 'cancel'}} class="btn btn-default">Cancel</button>
	    </div>
	  {{else}}
	    <div class="form-group">
	      <button {{action 'saveRecord'}} class="btn btn-success">Save</button>
	      <button {{action 'saveAndPublishRecord'}} class="btn btn-primary">Save and publish</button>
	      <button {{action 'cancel'}} class="btn btn-default">Cancel</button>
	    </div>
	  {{/if}}

	</form>
</article>
