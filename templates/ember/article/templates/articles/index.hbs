<!-- Page Header -->
<header class="intro-header">
  <div class="container">
    <div class="site-heading">
      <h1>{{t 'articles.title'}}</h1>
      <hr class="small">
      <span class="subheading">{{t 'articles.subTitle'}}</span>
    </div>
  </div>
</header>

<!-- Main Content -->
<div class="container">
  <div class="row">
    <div class="col-md-8">
      {{#can 'article_create'}}
        <div class="articles-actions">
          {{#link-to 'articles.create'}}
            {{t 'article.create'}}
          {{/link-to}}
        </div>
      {{/can}}

      {{render 'articles.list' records}}

      <div class="records-footer">
        {{#if records.isFulfilled}}
          <div class="articles-pagination">
            {{we-pagination currentPage=currentPage totalPages=totalPages maxPagesToDisplay=maxPagesToDisplay }}
          </div>
        {{/if}}
      </div>
    </div>
  </div>
</div>